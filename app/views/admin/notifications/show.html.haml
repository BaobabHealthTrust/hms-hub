:ruby
  @nav_hierarchy = [:notifications, @notification]

%h2= t('.title')

.admin-form
  .field
    .label= t('.labels.id')
    .value= @notification.id
  .field
    .label= t('.labels.uuid')
    .value= @notification.uuid
  .field
    .label= t('.labels.notifier')
    .value= link_to @notifier_name, admin_notifier_path(@notification.notifier_id)
  .field
    .label= t('.labels.message')
    .value= link_to @message.path, [:admin, @message.message_stream, @message]
  .field
    .label= t('.labels.phone_number')
    .value= link_to @notification.phone_number, admin_notifications_path(:phone_number_eq => @notification.phone_number)
  .field
    .label= t('.labels.first_name')
    .value= @notification.first_name
  .field
    .label= t('.labels.delivery_method')
    .value= @notification.delivery_method
  .field
    .label= t('.labels.delivery_start')
    .value= l(@notification.delivery_start) if @notification.delivery_start
  .field
    .label= t('.labels.delivery_expires')
    .value= l(@notification.delivery_expires) if @notification.delivery_expires
  .field
    .label= t('.labels.delivery_window')
    .value= @notification.delivery_window
  .field
    .label= t('.labels.last_run_at')
    .value= l(@notification.last_run_at) if @notification.last_run_at
  .field
    .label= t('.labels.status')
    .value= @notification.status
  .field
    .label= t('.labels.last_error_type')
    .value= @notification.last_error_type
  .field
    .label= t('.labels.last_error_msg')
    .value= @notification.last_error_msg
  .field
    .label= t('.labels.created_at')
    .value= l(@notification.created_at)
  .field
    .label= t('.labels.updated_at')
    .value= l(@notification.updated_at)

%h2= t('.delivery_attempts_title')
= render 'admin/delivery_attempts/table', :delivery_attempts => @attempts
